# This tmux statusbar config was created by tmuxline.vim
# on Sun, 17 Jul 2022

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour15,bg=colour238"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour234 bg=colour238"
set -g status-style "none,bg=colour234"
set -g message-style "fg=colour15,bg=colour238"
set -g pane-border-style "fg=colour234"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "underscore,fg=colour15,bg=colour236"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=colour15,bg=colour236"
set -g status-left ""
set -g status-right "#[fg=colour238,bg=colour234,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour238] #h "
setw -g window-status-format "#[fg=colour234,bg=colour236,nobold,nounderscore,noitalics]#[default] #I:#W #[fg=colour236,bg=colour234,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour234,bg=colour238,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour238] #I:#W #[fg=colour238,bg=colour234,nobold,nounderscore,noitalics]"
