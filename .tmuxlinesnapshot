# This tmux statusbar config was created by tmuxline.vim
# on Fri, 22 Jul 2022

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour15,bg=colour30"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour234 bg=colour238"
set -g status-style "none,bg=colour8"
set -g message-style "fg=colour15,bg=colour30"
set -g pane-border-style "fg=colour234"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "underscore,fg=colour15,bg=colour23"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=colour15,bg=colour23"
set -g status-left ""
set -g status-right "#[fg=colour30,bg=colour8,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour30] #h "
setw -g window-status-format "#[fg=colour8,bg=colour23,nobold,nounderscore,noitalics]#[default] #I:#W #[fg=colour23,bg=colour8,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour8,bg=colour30,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour30] #I:#W #[fg=colour30,bg=colour8,nobold,nounderscore,noitalics]"
